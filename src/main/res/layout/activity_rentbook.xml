<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9B054"
    tools:context=".MainActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu" />

    <TextView
        android:id="@+id/titledisplay"
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="0dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/authordisplay"
        android:layout_width="411dp"
        android:layout_height="126dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="294dp"
        android:layout_marginEnd="3dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/uploadedby"
        android:layout_width="410dp"
        android:layout_height="128dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="422dp"
        android:layout_marginEnd="0dp"
        android:text="TextView"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imagedisplay"
        android:layout_width="205dp"
        android:layout_height="106dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="597dp"
        app:srcCompat="@drawable/baseline_upload_file_24" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/lavender"
        android:visibility="invisible" />

    <Button
        android:id="@+id/getbookbut"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authordisplay"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="292dp"
        android:text="GET BOOK" />


</RelativeLayout>